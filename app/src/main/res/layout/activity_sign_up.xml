<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#C4C4C4"
    tools:context=".Sign_up"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffff"
        android:text="Registration"
        android:textSize="25dp"
        android:gravity="center"
        android:padding="8dp"
        android:layout_marginBottom="18dp"
        android:textStyle="bold"
        android:backgroundTint="#5B21B6"
        android:textColor="@color/white"

        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="15dp"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:paddingBottom="15dp"



        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please provide the following information"
            android:textSize="22dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            />
        <EditText
            android:id="@+id/fullName"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Full Name"
            android:textColorHint="@color/white"
            android:layout_marginTop="10dp"
            android:background="@drawable/test_design"
            android:padding="10dp"

            android:textColor="@color/white"
            android:layout_marginBottom="10dp"

            />
        <EditText
            android:id="@+id/user_name"

            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Username"
            android:textColorHint="@color/white"
            android:layout_marginTop="10dp"
            android:background="@drawable/test_design"
            android:padding="10dp"
            android:textColor="@color/white"
            android:layout_marginBottom="10dp"

            />
        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:hint="Email"
            android:textColorHint="@color/white"
            android:layout_marginTop="10dp"
            android:background="@drawable/test_design"
            android:padding="10dp"
            android:textColor="@color/white"
            android:layout_marginBottom="10dp"

            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPassword"
                android:hint="Password"
                android:textColorHint="@color/white"
                android:layout_marginTop="10dp"
                android:background="@drawable/test_design"
                android:padding="10dp"
                android:textColor="@color/white"
                android:layout_marginBottom="10dp"

                />
            <Button
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:text="Show"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="3dp"
                android:backgroundTint="#8162BC"

                />

        </LinearLayout>

        <EditText
            android:id="@+id/confirm_password"

            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPassword"
            android:hint="Confirm password"
            android:textColorHint="@color/white"
            android:layout_marginTop="10dp"
            android:background="@drawable/test_design"
            android:padding="10dp"
            android:textColor="@color/white"
            android:layout_marginBottom="10dp"

            />
        <EditText
            android:id="@+id/date"

            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="date"
            android:hint="YYYY-MM-DD"
            android:textColorHint="@color/white"
            android:layout_marginTop="10dp"
            android:background="@drawable/test_design"
            android:padding="10dp"
            android:textColor="@color/white"

            tools:ignore="InvalidId" />
        <Spinner
            android:id="@+id/Spinner_action"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:spinnerMode="dropdown"

            android:layout_marginTop="40dp"
            android:background="@drawable/test_design"


            />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I agree to the TOS and Privacy Policy"
            android:textSize="17dp"
            android:textColor="@color/black"
            android:textStyle="bold"/>
        <Button
            android:id="@+id/sign_upBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign Up"

            />





    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Copyright @2022 | Besides you"
        android:textAlignment="center"
        android:background="#5B21B6"
        android:textColor="@color/white"/>

</LinearLayout>