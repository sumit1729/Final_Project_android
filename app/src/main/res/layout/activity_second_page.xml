<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".second_page"
    android:background="#C4C4C4"
    android:orientation="vertical"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffff"
        android:text="Registration"
        android:textSize="25dp"
        android:gravity="center"
        android:padding="8dp"
        android:layout_marginBottom="18dp"
        android:textStyle="bold"
        android:backgroundTint="#5B21B6"
        android:textColor="@color/white"

        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="You have successfully created your account"
        android:textAlignment="center"
        android:textSize="30dp"
        android:layout_margin="20dp"
        android:textColor="#5B21B6"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please check your email for confirmation.
Now you can log in. "
        android:textColor="@color/black"
        android:textAlignment="center"
        android:layout_margin="50dp"
        android:textSize="15dp"/>
    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Log In"
        android:layout_marginLeft="100dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:text="Copyright @2022 | Besides you"
        android:textAlignment="center"
        android:background="#5B21B6"
        android:textColor="@color/white"
        android:layout_marginTop="340dp"/>



</LinearLayout>